@page
@model ContactTracing.Pages.Tests.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Test</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Test.ID" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Test.positive" /> @Html.DisplayNameFor(model => model.Test.positive)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Test.dateTime" class="control-label"></label>
                <input asp-for="Test.dateTime" class="form-control" />
                <span asp-validation-for="Test.dateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Test.AccountID" class="control-label"></label>
                <select asp-for="Test.AccountID" class="form-control" asp-items="ViewBag.AccountID"></select>
                <span asp-validation-for="Test.AccountID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
